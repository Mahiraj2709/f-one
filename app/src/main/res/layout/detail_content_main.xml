<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_searchLocation"
        android:clickable="true"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_margin="16dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:id="@+id/tv_place_marker"
                android:src="@drawable/ic_location_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="4dp"/>
            <ProgressBar
                android:id="@+id/pb_addressLoading"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:visibility="gone"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_locationName"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="Getting location"/>
        <ImageView
            android:src="@drawable/ic_right_arrow"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_vertical"
        android:layout_above="@+id/ll_bottomBar">
        <TextView
            android:id="@+id/tv_sendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_send_request"
            android:background="@drawable/shape_rect_f_white_s_black"
            android:textStyle="bold"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
        <ImageView
            android:id="@+id/iv_currentLocation"
            android:src="@drawable/ic_current_location"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_bottomBar"
        android:background="@color/colorBrown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_servicesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/single_home_service"/>
    </LinearLayout>
</RelativeLayout>